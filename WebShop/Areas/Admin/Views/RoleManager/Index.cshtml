@using Microsoft.AspNetCore.Identity
@using ModelWeb.Administration;


@model IEnumerable<IdentityRole>

<h1>Role manager</h1>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-area="Admin" asp-controller="RoleManager" asp-action="Delete" asp-route-id="@role.Id">
                        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row pt-4">
    <h4 class="text-sm-start">
        <strong>AddRole</strong>
    </h4>
    <div class="col-md-7">
        <form method="post" asp-action="AddRole" asp-controller="RoleManager">
            @*<div class="input-group small form-floating py-2 col-6">*@
            <div class="form-floating py-2 col-6">
                <input name="roleName" class="form-control input-group-sm" />
            </div>
            <span class="input-group-btn btn-text-left">
                <button class="btn btn-success">
                    ADD
                </button>
            </span>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}


